<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.UserMapper">
	
	<select id="findUserBykey"  parameterType="String" resultType="User">		
		select * from `user`
		<where>
			<if test="key!=null and key!=''">
			and name like #{key}
			</if>
		</where>		
	</select>
	<insert id="addUser" flushCache="true" parameterType="User">
		insert into `user` values(#{id},#{name},#{positionX},#{positionY},#{rtmpSrc})
	</insert>
	
	<delete id="deleteUser" parameterType="int">
		delete from `user` where id=#{id}
	</delete>
	
	<update id="updateUser" parameterType="User">
		update `user` set name=#{camera.name},positionX=#{camera.positionX},positionY=#{camera.positionY},rtmpSrc=#{camera.rtmpSrc} where id=#{camera.id}
	</update>
	
</mapper>